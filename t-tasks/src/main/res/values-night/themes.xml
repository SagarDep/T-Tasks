<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme (with action bar) -->
    <style name="Base.Theme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/md_grey_850</item>
        <item name="colorPrimaryDark">@color/md_grey_900</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base theme (no action bar) -->
    <style name="Base.Theme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_grey_850</item>
        <item name="colorPrimaryDark">@color/md_grey_900</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.Theme.Main" parent="MaterialDrawerTheme.TranslucentStatus">

        <item name="colorPrimary">@color/md_grey_850</item>
        <item name="colorPrimaryDark">@color/md_grey_900</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="material_drawer_selected_text">@color/colorAccent</item>

        <!-- CAB -->
        <item name="windowActionModeOverlay">true</item>
    </style>

</resources>
