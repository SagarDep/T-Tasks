<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activities.sign_in.SignInActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_welcome"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="64dp"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:text="@string/welcome"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"/>

        <TextView
            android:id="@+id/text_welcome_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_welcome"
            android:layout_centerInParent="true"
            android:layout_marginBottom="56dp"
            android:gravity="center"
            android:maxWidth="264dp"
            android:text="@string/welcome_description"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:textStyle="italic|bold"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_welcome_description"
            android:layout_centerHorizontal="true"
            android:minWidth="256dp"
            app:buttonSize="wide"/>

    </RelativeLayout>

</layout>
