<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date_day_number"
            style="@style/TextAppearance.AppCompat.Large.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="31"/>

        <TextView
            android:id="@+id/date_day_name"
            style="@style/TextAppearance.AppCompat.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:minEms="2"
            tools:text="Wed"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/background_task"
        android:padding="8dp">

        <TextView
            android:id="@+id/task_title"
            style="@style/TextAppearance.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:singleLine="true"
            android:textStyle="bold"
            tools:text="Buy groceries"/>

        <TextView
            android:id="@+id/task_description"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_title"
            android:layout_marginBottom="4dp"
            android:singleLine="true"
            android:textStyle="italic"
            android:visibility="gone"
            tools:text="Go to the supermarket and pick them up"/>

        <TextView
            android:id="@+id/task_reminder"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_description"
            android:drawableLeft="@drawable/ic_alarm_18dp"
            android:drawableStart="@drawable/ic_alarm_18dp"
            android:gravity="bottom"
            android:singleLine="true"
            android:visibility="gone"
            tools:text="5:00PM"/>

    </RelativeLayout>

</LinearLayout>
