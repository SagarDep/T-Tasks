<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="task"
            type="com.teo.ttasks.data.model.TTask"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp">

        <LinearLayout
            android:id="@+id/layout_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="-4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_day_number"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-8dp"
                tools:text="31"/>

            <TextView
                android:id="@+id/date_day_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:minEms="2"
                tools:text="Wed"/>

        </LinearLayout>

        <LinearLayout
            android:id="@id/layout_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_task"
            android:orientation="vertical"
            android:padding="8dp"
            android:transitionName="@string/transition_task_header">

            <TextView
                android:id="@id/task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textStyle="bold"
                android:text="@{task.title}"
                android:transitionName="@string/transition_task_title"
                tools:text="Buy groceries"/>

            <TextView
                android:id="@+id/task_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:text="@{task.notes}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="italic"
                tools:text="Go to the supermarket and pick them up"/>

            <TextView
                android:id="@+id/task_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                tools:drawableLeft="@drawable/ic_alarm_18dp"
                tools:text="5:00PM"/>

        </LinearLayout>

    </LinearLayout>

</layout>
