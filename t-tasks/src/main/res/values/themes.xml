<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme (with action bar) -->
    <style name="Base.Theme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base theme (no action bar) -->
    <style name="Base.Theme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main -->
    <style name="Base.Theme.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- CAB -->
        <item name="windowActionModeOverlay">true</item>

        <!-- Here we setting appcompatâ€™s actionBarStyle -->
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/md_light_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_hint_icon">@color/material_drawer_hint_icon</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_header_selection_text
        </item>
    </style>

    <style name="Theme.Main" parent="Base.Theme.Main">
    </style>

    <!-- Task Detail -->
    <style name="Base.Theme.TaskDetail" parent="Base.Theme.NoActionBar">
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="Theme.TaskDetail" parent="Base.Theme.TaskDetail"/>

    <!-- Edit Task -->
    <style name="Base.Theme.EditTask" parent="Base.Theme">
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="Theme.EditTask" parent="Base.Theme.EditTask"/>

    <!-- Sign In -->
    <style name="Theme.SignIn" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <!-- Settings -->
    <style name="Theme.Settings" parent="Base.Theme"/>

    <!-- About -->
    <style name="Theme.About" parent="Base.Theme"/>

    <!-- Widget configure -->
    <style name="Theme.TasksWidgetConfigure" parent="Theme.AppCompat.DayNight.Dialog"/>

    <!-- Widget -->
    <style name="Theme.Widget" parent="Theme.AppCompat"/>

</resources>
