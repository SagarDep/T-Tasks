<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.TTasks" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main Theme -->
    <style name="Base.Theme.Main" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- CAB -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Main" parent="Base.Theme.Main"/>

    <!-- Main Theme preview, used only for a better preview in Android Studio -->
    <style name="Theme.MainPreview" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Sign In -->
    <style name="Theme.SignIn" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <!-- Edit Task -->
    <style name="Base.Theme.TTasks.EditTask" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    </style>
    <style name="Theme.TTasks.EditTask" parent="Base.Theme.TTasks.EditTask"/>

    <!-- Task Detail -->
    <style name="Base.Theme.TTasks.TaskDetail">
        <!-- NoActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="Theme.TTasks.TaskDetail" parent="Base.Theme.TTasks.TaskDetail"/>

    <!-- Widget -->
    <style name="WidgetFontChip">
        <item name="android:textSize">@dimen/widget_font_chip</item>
        <item name="android:textColor">@color/widget_text_chip_white</item>
    </style>

    <style name="WidgetFontChipTitle" parent="@style/WidgetFontChip">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WidgetFontNarrowChip">
        <item name="android:textSize">@dimen/widget_font_chip_narrow</item>
        <item name="android:textColor">@color/widget_text_chip_white</item>
    </style>

    <style name="WidgetFontNarrowChipTitle" parent="@style/WidgetFontNarrowChip">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WidgetFontHeaderDate">
        <item name="android:textSize">@dimen/widget_font_header_date</item>
    </style>

    <style name="WidgetFontHeaderWeekday">
        <item name="android:textSize">@dimen/widget_font_header_weekday</item>
    </style>

    <style name="WidgetChip_Title_Appearance" parent="@style/WidgetFontChipTitle">
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/widget_padding_chip_text_start</item>
        <item name="android:paddingRight">@dimen/widget_padding_chip_text_start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="WidgetChip_Title_Solo_Appearance" parent="@style/WidgetChip_Title_Appearance">
        <item name="android:gravity">center|left</item>
    </style>

    <style name="WidgetChip_Body_Appearance" parent="@style/WidgetFontChip">
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/widget_padding_chip_text_start</item>
        <item name="android:paddingRight">@dimen/widget_padding_chip_text_start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="WidgetChip_Title_Narrow_Appearance" parent="@style/WidgetFontNarrowChipTitle">
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/widget_padding_chip_text_narrow_start</item>
        <item name="android:paddingRight">@dimen/widget_padding_chip_text_narrow_start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="WidgetChip_Title_Narrow_Solo_Appearance" parent="@style/WidgetChip_Title_Narrow_Appearance">
        <item name="android:gravity">center|left</item>
    </style>

    <style name="WidgetChip_Body_Narrow_Appearance" parent="@style/WidgetFontNarrowChip">
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/widget_padding_chip_text_narrow_start</item>
        <item name="android:paddingRight">@dimen/widget_padding_chip_text_narrow_start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="WidgetHeader_Weekday_Appearance" parent="@style/WidgetFontHeaderWeekday">
        <item name="android:textColor">@color/widget_text_main_header</item>
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">start|center|top</item>
        <item name="android:paddingTop">2.0sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="WidgetHeader_Date_Appearance" parent="@style/WidgetFontHeaderDate">
        <item name="android:textColor">@color/widget_text_main_header</item>
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">start|bottom|center</item>
        <item name="android:paddingBottom">2.0sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="WidgetDayHeader_Narrow_Appearance" parent="@style/WidgetFontNarrowChip">
        <item name="android:textColor">@color/widget_text_day_medium</item>
        <item name="android:ellipsize">none</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="WidgetChip_Background_Narrow_Appearance">
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">true</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <!-- A spinner item style that better resembles TextViews -->
    <style name="SpinnerItemStyle" parent="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
