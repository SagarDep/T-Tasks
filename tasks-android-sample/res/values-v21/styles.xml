<resources>
    <!-- Variation on the Light theme that turns off the title -->
    <style name="Theme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/blue_grey_500</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/blue_grey_700</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/teal_A700</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="SettingsTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/blue_grey_500</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/blue_grey_700</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/teal_A700</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

</resources>
